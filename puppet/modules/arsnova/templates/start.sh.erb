#!/usr/bin/env bash

echo -e "Starting ARSnova. This could take a few minutes...\c"

OUTPUT_REDIRECT="2>/dev/null 1>&2"
VERBOSE=""
while getopts v opt
do
  case $opt in
    v)
      OUTPUT_REDIRECT=""
      VERBOSE="-v"
      ;;
  esac
done
shift $((OPTIND - 1))

CWD=`pwd`
<% if @environment == "production" %>
ARSNOVA_TOMCAT="<%= @deploy_path %>"
<% end %>
ARSNOVA_SERVER="<%= @server_path %>"
ARSNOVA_MOBILE="<%= @mobile_path %>"
ARSNOVA_PRESENTER="<%= @presenter_path %>"

PID_FILE_LISTEN="<%= @listen_pid %>"
PID_FILE_MOBILE="<%= @mobile_pid %>"
PID_FILE_SERVER="<%= @server_pid %>"

eval "./stop.sh $VERBOSE $OUTPUT_REDIRECT"

PID_MOBILE=0
PID_PRESENTER=0
PID_SERVER=0
PID_LISTEN=0

cd "$ARSNOVA_MOBILE"
eval "ruby ~/listen.rb $OUTPUT_REDIRECT &"
PID_LISTEN=$!
eval "ant -quiet sencha:build:<%= @sencha_env %> $OUTPUT_REDIRECT"
eval "ant -quiet sencha:app:watch -Denvironment=<%= @sencha_env %> $OUTPUT_REDIRECT &"
PID_MOBILE=$!

cd "$ARSNOVA_PRESENTER"
<% if @environment == "development" %>
eval "mvn -q clean prepare-package -Denv=dev $OUTPUT_REDIRECT &"
PID_PRESENTER=$!
<% else %>
eval "mvn -q clean package -Denv=prod $OUTPUT_REDIRECT"
<% end %>

<% if @environment == "development" %>
cd "$ARSNOVA_SERVER"
eval "mvn -q jetty:run -Dmobile.path=<%= @mobile_target %> $OUTPUT_REDIRECT &"
PID_SERVER=$!
<% else %>
cd "$ARSNOVA_SERVER"
eval "mvn -q tomcat7:deploy -Dmobile.path=<%= @mobile_target %> $OUTPUT_REDIRECT &"
<% end %>

cd "$CWD"

echo "$PID_LISTEN" > "$PID_FILE_LISTEN"
echo "$PID_MOBILE" > "$PID_FILE_MOBILE"
echo "$PID_SERVER" > "$PID_FILE_SERVER"

<% if @environment == "development" %>
ARSNOVA_URL="http://localhost:8080/index.html"
ARSNOVA_INTERNAL_URL="$ARSNOVA_URL"
<% else %>
ARSNOVA_URL="http://localhost:8081/mobile/index.html"
ARSNOVA_INTERNAL_URL="http://localhost/mobile/index.html"
<% end %>
RESPONSE_CODE=0
while [ "$RESPONSE_CODE" -ne 200 ]
do
  # courtesy of http://superuser.com/a/442395
  RESPONSE_CODE=`curl -s -o /dev/null -I -w "%{http_code}" -m 5 "$ARSNOVA_INTERNAL_URL"`
  sleep 5
  echo -e ".\c"
done

echo -e "\nARSnova is now ready @ $ARSNOVA_URL"
